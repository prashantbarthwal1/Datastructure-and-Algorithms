//Int to String



#include <sstream>

int i = 123;
std::string out_string;
std::stringstream ss;
ss << i;
out_string = ss.str();







//String to Int

#include <sstream>
#include <string>

std::string text = "123";
int number;
std::istringstream iss (text);
iss >> number;
if (iss.fail()) {
  // something wrong happened
}
